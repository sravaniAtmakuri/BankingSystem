<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>com.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransactionsServlet</servlet-name>
        <servlet-class>com.TransactionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthorizeCreditCardServlet</servlet-name>
        <servlet-class>com.AuthorizeCreditCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAccountServlet</servlet-name>
        <url-pattern>/CreateAccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransactionsServlet</servlet-name>
        <url-pattern>/TransactionsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorizeCreditCardServlet</servlet-name>
        <url-pattern>/AuthorizeCreditCardServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
     <welcome-file-list>
        <welcome-file>
            LoginPage.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
